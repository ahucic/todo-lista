@model assignmentWork.Models.Register
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Register.cshtml";
}


<div class="card">
    <div class="card-body">
        <h4>Login </h4> <p style="color:blue">@ViewBag.success</p>
        <hr />

        <form method="post">

            <div class="form-group">
                <label>Email:</label>
                <input type="text" asp-for="user_email" class="form-control">
                <span asp-validation-for="user_email" style="color:red;"></span>
            </div>
            <div class="form-group">
                <label>Password:</label>
                <input type="password" asp-for="user_password" class="form-control">
                <span asp-validation-for="user_password" style="color:red;"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    @Html.ActionLink("Nemate profil ? Kliknite ovdje", "Index", "Welcome")
                </label>
            </div>
            <button type="submit" class="btn btn-primary">Dodaj</button>
        </form>
        </div>
    </div>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

